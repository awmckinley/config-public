{{ $email := promptStringOnce . "email" "Email address" "adam@awmckinley.net" -}}

encryption = "age"
sourceDir = "{{ .chezmoi.sourceDir }}"

[age]
    command = "rage"

[data]
    email = {{ $email | quote }}
{{ if eq .chezmoi.os "windows" }}
    gitDir = "~/AppData/Remote/Git"
{{ else }}
    gitDir = "~/.config/git"
{{ end }}

[diff]
    command = "delta"
    pager = "delta"

[merge]
    command = "nvim"
    args = ["-d", "{{ "{{ .Destination }}" }}", "{{ "{{ .Source }}" }}", "{{ "{{ .Target }}" }}"]
