[core]
	pager = delta
	quotePath = false

[credential "https://github.com"]
	useHttpPath = true

[delta]
	line-numbers = true
	navigate = true
	side-by-side = true
	tabs = 4

[diff]
	colorMoved = default

[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f

[include]
	path = ~/.config/delta/ansi.gitconfig
	path = ~/.config/delta/ansi256.gitconfig
	path = ~/.config/delta/catppuccin.gitconfig

[init]
	defaultBranch = master
	templateDir = {{ .gitDir }}/templates

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

[rerere]
	enabled = true

[user]
	email = {{ .email }}
	name = Adam McKinley
